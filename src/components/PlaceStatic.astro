---
import { motion, AnimatePresence } from "framer-motion"
const { place, isExpanded } = Astro.props

const formatDate = (dateString) => {
  if (!dateString) return ""
  const date = new Date(dateString)
  return date.toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "numeric",
  })
}

const tabs = [
  { id: "about", label: "About", isActive: false },
  { id: "wifi", label: "Wi-Fi", isActive: true },
  { id: "reviews", label: "Reviews", isActive: false },
  { id: "hours", label: "Opening Hours", isActive: false },
]
---

<article
  class="bg-white rounded-lg shadow-sm overflow-hidden cursor-pointer card-shadow cursor-pointer transition-spring-medium duration-300 active:scale-[0.98]"
  data-place-id={place.id}
>
  <div
    class="img-container relative h-48 overflow-hidden flex items-center justify-center transition-spring-medium duration-300"
  >
    <!-- Voting buttons -->
    <div class="votes-container absolute top-0 left-0 p-3">
      <div
        class="votes rounded-full flex flex-col justify-center items-center p-1 bg-white shadow-sm"
      >
        <button
          class="rounded-full w-8 h-8 bg-gray-50 text-gray-700 hover:bg-gray-100 active:bg-black active:text-white"
        >
          ‚Üë
        </button>
        <span class="text-center text-sm font-semibold text-black inline-block">
          {place.additionalInfo.userScore || 0}
        </span>
        <button
          class="rounded-full w-8 h-8 bg-gray-50 text-gray-700 hover:bg-gray-100 active:bg-black active:text-white"
        >
          ‚Üì
        </button>
      </div>
    </div>
    {
      place.photos && place.photos.length > 0 ? (
        <img
          src={place.photos[0].url}
          alt={place.displayName?.text}
          class="w-full object-cover"
        />
      ) : (
        <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
          <span class="text-gray-500">No image available</span>
        </div>
      )
    }
  </div>
  <div class="p-4">
    <h3 class="text-2xl font-semibold mb-0">{place.displayName?.text}</h3>
    <ul class="list-none flex-row flex space-x-2 text-neutral-600 text-sm">
      {place.primaryType && <li>{place.primaryTypeDisplayName?.text}</li>}
      <span>&bull;</span>
      {place.distance && <li>{(place.distance / 1000).toFixed(2)}km away</li>}
      <span>&bull;</span>
      {place.rating && <li>‚≠ê {place.rating}</li>}
    </ul>

    <div
      class="tabs-container transition-all duration-200 mt-4 max-h-0 overflow-hidden"
      style="display: none;"
    >
      <!-- Tabs -->
      <div class="tabs relative">
        <div class="flex space-x-1 relative">
          {
            tabs.map((tab) => (
              <button
                key={tab.id}
                data-tab={tab.id}
                class="relative rounded-full px-3 py-1.5 text-sm font-medium text-gray-600 outline-sky-400 transition focus-visible:outline-2 hover:text-gray-800"
              >
                {tab.label}
              </button>
            ))
          }
        </div>
        <motion.span
          client:load
          layoutId={`bubble-${place.id}`}
          className="absolute inset-0 z-10 bg-black mix-blend-difference bubble transition-spring-medium duration-300 rounded-full"
          style={{
            display: "none",
          }}
        />
      </div>

      <!-- Tab content -->
      <div class="tab-content mt-4 transition-spring-medium duration-300">
        <div id={`about-${place.id}`} class="tab-pane">
          <p>{place.editorialSummary?.text || "No description available."}</p>
        </div>
        <div id={`wifi-${place.id}`} class="tab-pane" style="display: none;">
          {
            place.additionalInfo.wifiSSID && (
              <div class="border border-b-0 border-gray-200 rounded-t-md py-2 px-2 flex flex-row items-center">
                <span class="mr-2 h-full w-8 flex items-center justify-center">
                  üì∂
                </span>
                <span class="font-mono">{place.additionalInfo.wifiSSID}</span>
              </div>
            )
          }
          {
            place.additionalInfo.wifiSpeed && (
              <div class="border border-gray-200 py-2 px-2 flex flex-row items-center">
                <span class="mr-2 h-full w-8 flex items-center justify-center">
                  ‚ö°
                </span>
                <span class="font-mono">
                  {place.additionalInfo.wifiSpeed}Mbps
                </span>
                <span class="ml-auto text-xs mr-1">
                  Updated: {formatDate(place.additionalInfo.wifiUpdated)}
                </span>
              </div>
            )
          }
          {
            place.additionalInfo.wifiPassword && (
              <div class="border rounded-b-md border-t-0 border-gray-200 py-2 px-2 flex flex-row items-center">
                <span class="mr-2 h-full w-8 flex items-center justify-center">
                  üîí
                </span>
                <input
                  class="font-mono bg-transparent"
                  type="text"
                  value={place.additionalInfo.wifiPassword}
                  readonly
                />
                <button class="ml-auto bg-black text-white px-2 py-1 rounded-md text-sm">
                  Copy
                </button>
              </div>
            )
          }
        </div>
        <div id={`reviews-${place.id}`} class="tab-pane" style="display: none;">
          <p>Rating: {place.rating} ‚≠ê ({place.userRatingCount} reviews)</p>
        </div>
        <div id={`hours-${place.id}`} class="tab-pane" style="display: none;">
          <p>Opening hours information not available.</p>
        </div>
      </div>
    </div><!-- /tabs-container -->

    <aside class="tags flex flex-row gap-2 flex-wrap mt-4">
      {
        place.tags.map((tag) => (
          <div class="tag rounded-full bg-gray-100 text-black px-3 py-2 text-sm">
            {tag}
          </div>
        ))
      }
    </aside>
  </div>
</article>
